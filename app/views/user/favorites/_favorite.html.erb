<div class="favorite">
  <% if user_signed_in? && shop.is_favorited_by?(current_user) %>
    <%= link_to shop_favorites_path(shop), method: :delete, remote: true do %>
      ♥<%= shop.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to shop_favorites_path(shop), method: :post, remote: true do %>
      ♡<%= shop.favorites.count %>
    <% end %>
  <% end %>
</div>