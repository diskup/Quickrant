<div class="col-6 text-white mx-auto">
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
<div class='container'>
  <div class='row'>
    <div class="mx-auto mt-5">
      <h2>新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label "お住まいの地域" %>
          <%= f.select :current_prefectures, User.prefectures.keys, {}, class: "form-control" %>
        </div>
       <div class="form-group">
          <%= f.label "ニックネーム" %>
          <%= f.text_field :nickname, autofocus: true, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "パスワード(8文字以上)" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "登録", class: 'btn btn-secondary' %>
        </div>
      <% end %>
      ログインは<%= link_to "こちら", new_user_session_path %>から行なってください
    </div>
  </div>
</div>