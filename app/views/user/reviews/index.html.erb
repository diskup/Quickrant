<div class="col-4">
  <div class="review">
    <div class="card-header">
      <%= @shop.name %>
    </div>
      <div class="average-score">
        <div class="star-rating">
          <div class="star-rating-front" style="width: <%= @shop.review_score_percentage %>%">★★★★★</div>
          <div class="star-rating-back">★★★★★</div>
        </div>
        <div class="average-score-display ml-3 pt-2">
          <%= @shop.avg_score %>点（<%= @shop.reviews.count %>件のレビュー）
        </div>
      </div>
    <div class="card-footer">
      <%= link_to shop_reviews_path(@shop), class: "button mr-3" do %>
        レビューを見る
      <% end %>
      <%= link_to shop_path(@shop), class: "button ml-3" do %>
        レビューを書く
      <% end %>
    </div>
  </div>
</div>