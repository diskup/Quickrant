<div class="container">
  <div class="row">
    <div class="mx-auto mt-3">
      <% if @shops.any? %>
        <h2 class="search-title"><%= @shops_title %></h2>
        <%= render "user/shops/shop", shops: @shops %>
      <% else %>
        <p class="mx-auto">検索結果は見つかりませんでした。</p>
      <% end %>
    </div>
  </div>
</div>
<%= paginate @shops, theme: 'twitter-bootstrap-4' %>