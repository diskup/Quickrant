<div class='container'>
  <div class='row'>
    <div class="mx-auto mt-5">
    <h2>ユーザー情報編集</h2>
    <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
      <div class="form-group">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :icon_image %>
        <%= f.attachment_field :icon_image, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.label :background_image %>
        <%= f.attachment_field :background_image, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>