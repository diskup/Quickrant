<div class='container'>
  <div class='row'>
    <div class="mx-auto mt-5">
      <h2 class="title">ユーザー情報編集</h2>
      <%= render 'layouts/errors', obj: @user %>
      <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
        <div class="form-group">
          <%= f.label "お住まいの地域" %>
          <%= f.select :current_prefectures, User.prefectures.keys, {}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label "ニックネーム" %>
          <%= f.text_field :nickname, class: "form-control" %>
        </div>
       <div class="form-group">
          <%= f.label "アイコン画像" %>
          <%= f.attachment_field :icon_image, class: "form-control-file" %>
        </div>
        <div class="form-group">
          <%= f.label "背景画像" %>
          <%= f.attachment_field :background_image, class: "form-control-file" %>
        </div>
        <div class="form-group">
          <%= f.label "紹介文" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>