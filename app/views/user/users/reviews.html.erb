<div class="container">
  <h2 class="title"><%= @user.nickname %>さんが評価したお店</h2>
  <div class="row">
    <div class="col-7 mx-auto mt-3">
      <% if @reviews.any? %>
        <% @reviews.each do |review| %>
          <div class="review mt-3">
            <div class="card-header">
              <%= link_to user_path(review.user) do %>
                <%= attachment_image_tag(review.user, :icon_image, fallback: "no-image.png", class:"review-icon rounded-circle border") %>
              <% end %>
              <%= link_to review.shop.name, shop_path(review.shop) %>
            </div>
              <div class="average-score">
                <div class="star-rating">
                  <div class="star-rating-front" style="width: <%= review.score * 20 %>%">★★★★★</div>
                  <div class="star-rating-back">★★★★★</div>
                </div>
              <div class="average-score-display ml-3 pt-2">
                <%= review.score.to_i %>点
              </div>
              </div>
            <div class="card-footer">
              コメント：<br><%= review.content %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="mx-auto">評価したお店はありません</p>
      <% end %>
    </div>
  </div>
</div>