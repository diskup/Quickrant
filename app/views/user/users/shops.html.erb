<div class="container">
  <div class="row">
    <div class="mx-auto mt-3">
      <% if @shops.any? %>
        <h2 class="title"><%= @user.nickname %>さんが投稿したお店</h2>
        <%= render "user/shops/shop", shops: @shops %>
      <% else %>
        <p class="mx-auto">投稿したお店はありません。</p>
      <% end %>
    </div>
  </div>
</div>