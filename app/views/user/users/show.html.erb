<div class="container">
  <div class="row">
    <div class="background-image mt-5">
      <%= attachment_image_tag(@user, :background_image, size: '550x300', fallback: "no-image-back.png") %>
      <div class="icon-image text-center">
        <%= attachment_image_tag(@user, :icon_image, size: '100x100', fallback: "no-image.png", class:"rounded-circle border") %>
        <br><%= @user.nickname %>
        <br><%= @user.introduction %>
      </div>
    </div>
    <div >
      <%= link_to "編集する", edit_user_path(current_user) %>
    </div>
  </div>
</div>

<%= @user.followeds.count %>
<%= @user.followings.count %>
<% unless @user == current_user %>
  <% if @user.is_followed_by?(current_user) %>
    <%= link_to user_relationships_path(@user), method: :delete do %>
      <button class="btn btn-info">フォロー外す</button>
    <% end %>
  <% else %>
    <%= link_to user_relationships_path(@user), method: :post do %>
      <button class="btn btn-success">フォローする</button>
    <% end%>
  <% end %>
<% end %>