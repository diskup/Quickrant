<div class="container">
  <h2 class="title text-center"><%= @user.nickname %>さんのプロフィール</h2>
  <div class="row">
    <div class="col-3 mt-5 text">
      <% if @user.introduction.present? %>
        <br><p class="text-center h4">紹介文</p>
        <br><p><%= @user.introduction %></p>
      <% end %>
    </div>
    <div class="col-8 mb-5">
      <div class="mt-5">
        <%= attachment_image_tag(@user, :background_image, width: "80%", fallback: "no-image-back.png", class:"background-image") %>
        <br>
        <%= attachment_image_tag(@user, :icon_image, width: "15%", fallback: "no-image.png", class:"icon-image rounded-circle border") %>
      </div>
      <% if @user == current_user %>
        <p class="mt-2 h4"><%= link_to "編集する", edit_user_path(@user) %></p>
      <% end %>
      <% unless @user == current_user %>
        <% if @user.is_followed_by?(current_user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user), method: :delete, class:"btn btn-secondary mt-2" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user), method: :post, class:"btn btn-secondary mt-2" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-5 mx-auto mt-5">
      <table class="table sm">
        <tr>
          <td>フォロー　：</td>
          <td><%= @user.followings.count %>人</td>
          <td><%= link_to "詳細", followings_user_path(@user) %> </td>
        </tr>
        <tr>
          <td>フォロワー：</td>
          <td><%= @user.followeds.count %>人</td>
          <td><%= link_to "詳細", followeds_user_path(@user) %></td>
        </tr>
        <tr>
          <td>お気に入り：</td>
          <td><%= @user.favorites.count %>件</td>
          <td><%= link_to "詳細", favorites_user_path(@user) %></td>
        </tr>
        <tr>
          <td>評価数　　：</td>
          <td><%= @user.reviews.count %>件</td>
          <td><%= link_to "詳細", reviews_user_path(@user) %></td>
        </tr>
        <tr>
          <td>登録店舗数：</td>
          <td><%= @user.shops.count %>件</td>
          <td><%= link_to "詳細", shops_user_path(@user) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>